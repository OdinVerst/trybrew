---
import type { GetStaticPaths } from 'astro'

import { getRelativeLocaleUrl } from 'astro:i18n'

import { notFoundMessages } from '@/i18n/locales/not-found/en'
import Layout from '@/layouts/Layout.astro'

const locale = Astro.currentLocale || 'en'

const messages = notFoundMessages(Astro.currentLocale)

export const getStaticPaths = (async () => [
  { params: { lang: 'ru' } },
  { params: { lang: 'en' } }
]) satisfies GetStaticPaths
---

<Layout description={messages.title} title={messages.title}>
  <h1>{messages.title}</h1>
  <p>{messages.subtitle}</p>
  <a href={getRelativeLocaleUrl(locale, '/')}>{messages.link}</a>
</Layout>
