---
const response = await fetch("https://api.github.com/repos/OdinVerst/trybrew/contributors");
const contributors = await response.json();
---

<ul class="list">{contributors.map((contributor) => {
	return (<li class="item">
			<a class="link" href={contributor.html_url} aria-label={`Account ${contributor.login} on github`}
				target="_blank">
				<img src={contributor.avatar_url}
					 alt=""
					 width="40"
					 height="40"
					 class="img"
					 loading="lazy"
					 decoding="async"/>
			</a>
		</li>)
})}</ul>

<style>
	.list {
		list-style-type: none;
		padding: 0;
		display: grid;
		grid-template-columns: repeat(auto-fill, 40px);
		gap: 10px;
	}

	.item {
		position: relative;
		display: flex;
		border-radius: 50px;
		overflow: hidden;
	}

	.img {
		object-fit: cover;
	}

	.item:hover {
		outline: 2px solid var(--color-link-text);
	}
</style>
