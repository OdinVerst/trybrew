---
import type { OctokitReqRepoCollaboratorsList } from '../types'

const response = await fetch(
  'https://api.github.com/repos/OdinVerst/trybrew/contributors'
)
const contributors = (await response.json()) as OctokitReqRepoCollaboratorsList
---

<ul class="list">
  {
    contributors.map(contributor => {
      return (
        <li class="item">
          <a
            aria-label={`Account ${contributor.login} on github`}
            class="link"
            href={contributor.html_url}
            target="_blank"
          >
            <img
              alt=""
              class="img"
              decoding="async"
              height="40"
              loading="lazy"
              src={contributor.avatar_url}
              width="40"
            />
          </a>
        </li>
      )
    })
  }
</ul>

<style>
  .list {
    list-style-type: none;
    padding: 0;
    display: grid;
    grid-template-columns: repeat(auto-fill, 40px);
    gap: 10px;
  }

  .item {
    position: relative;
    display: flex;
    border-radius: 50px;
    overflow: hidden;
  }

  .img {
    object-fit: cover;
  }

  .item:hover {
    outline: 2px solid var(--color-link-text);
  }
</style>
